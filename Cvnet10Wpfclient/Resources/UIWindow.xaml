<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="OuterWindowBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#40000000" Offset="0"/>
        <GradientStop Color="#15000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InnerWindowBackground" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#FF210F55" Offset="0"/>
        <GradientStop Color="#FF3B0D52" Offset="0.4"/>
        <GradientStop Color="#FFFB539B" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#66210F55" Offset="0"/>
        <GradientStop Color="#80FB539B" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1AFFFFFF"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#30FFFFFF"/>

    <Style x:Key="DashboardCard" TargetType="Border">
        <Setter Property="Padding" Value="16"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="8"/>
    </Style>
</ResourceDictionary>
