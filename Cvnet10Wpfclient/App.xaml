<Application x:Class="Cvnet10Wpfclient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:Cvnet10Wpfclient.Helpers"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Views/ZzMainMenuView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--  ConverterがあればApp.xamlで定義する  -->
            <helpers:DateYmd8Converter x:Key="DateYmd8Converter" />
            <helpers:DateTimeYmdHmsConverter x:Key="DateTimeYmdHmsConverter" />
            <helpers:EnumShimeDisplayConverter x:Key="EnumShimeDisplayConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/UIColors.xaml" />
                <ResourceDictionary Source="/Resources/UIWindow.xaml" />
                <ResourceDictionary Source="/Resources/UIBottun.xaml" />
                <ResourceDictionary Source="/Resources/UICommon.xaml" />
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
