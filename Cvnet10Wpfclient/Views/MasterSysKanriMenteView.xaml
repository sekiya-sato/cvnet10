<helpers:BaseWindow x:Class="Cvnet10Wpfclient.Views.MasterSysKanriMenteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Cvnet10Wpfclient.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Cvnet10Wpfclient.ViewModels"
        xmlns:helpers="clr-namespace:Cvnet10Wpfclient.Helpers"
        Title="{Binding Title}"
        Width="1024"
        Height="740"
        FontSize="18"
        Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource AppCommonBackgroundBrush}"
        TextOptions.TextFormattingMode="Display"                    
        mc:Ignorable="d">
    <helpers:BaseWindow.DataContext>
        <vm:MasterSysKanriMenteViewModel />
    </helpers:BaseWindow.DataContext>
    <helpers:BaseWindow.InputBindings>
        <KeyBinding Command="{Binding DoUpdateCommand}"
                    Gesture="F2" />
        <KeyBinding Command="{Binding DoDeleteCommand}"
                    Gesture="F3" />
        <KeyBinding Command="{Binding DoInsertCommand}"
                    Gesture="F4" />
        <KeyBinding Command="{Binding DoListCommand}"
                    Gesture="F5" />
        <KeyBinding Command="{Binding DoSelKubunCommand}"
                    Gesture="F6" />
    </helpers:BaseWindow.InputBindings>
    <Grid x:Name="grid0">
        <!-- 配置が確定してから
        <Viewbox Stretch="Uniform">
        </Viewbox>
        -->
        <Grid Width="{Binding ActualWidth, ElementName=grid0, Mode=OneWay}"
              Height="{Binding ActualHeight, ElementName=grid0, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="12*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="88*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="55*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0"
                  Grid.Column="0">
                <Button Width="70"
                        Height="30"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="Gray"
                        Command="{Binding ExitCommand}"
                        Content="閉じる" />
                <Button Width="110"
                        Height="30"
                        Margin="120,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding DoListCommand}"
                        Content="一覧取得 F5"
                        Visibility="Hidden"
                        d:Visibility="Visible"
                        />
                <Button Width="100"
                        Height="30"
                        Margin="257,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="Purple"
                        Command="{Binding DoUpdateCommand}"
                        Content="修正 F2" />
                <Label Height="34"
                       Margin="20,49,99,0"
                       VerticalAlignment="Top"
                       d:Content="Title"
                       Content="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                       FontSize="14" />
                <materialDesign:PackIcon Width="62"
                                         Height="70"
                                         Margin="370,10,0,0"
                                         Foreground="Blue"
                                         Kind="ApplicationSettings" />
            </Grid>
            <GridSplitter Grid.Row="1"
                          Grid.ColumnSpan="3"
                          Height="3"
                          Margin="0,0,0,0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          Background="DarkGray" />
            <GridSplitter Grid.RowSpan="1"
                          Grid.Column="1"
                          Width="3"
                          Margin="0,0,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="DarkGray" />
            <Grid Grid.Row="0"
                  Grid.Column="2">
                <Label Height="40"
                       Margin="383,10,0,0"
                       VerticalAlignment="Top"
                       d:Content="4567"
                       Content="{Binding Count}"
                       ContentStringFormat="{}件数={0:N0}" />
                <Label Height="34"
                       Margin="24,55,0,0"
                       VerticalAlignment="Top"
                       d:Content="4567"
                       Content="{Binding Desc0}"
                       FontSize="14" />
            </Grid>
            <Grid x:Name="Shosai"
                  Grid.Row="2"
                  Grid.Column="0"
                  Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                    <RowDefinition Height="Auto"
                                   MinHeight="38" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"
                                      MinWidth="80" />
                    <ColumnDefinition Width="Auto"
                                      MinWidth="80" />
                    <ColumnDefinition Width="Auto"
                                      MinWidth="80" />
                    <ColumnDefinition Width="Auto"
                                      MinWidth="80" />
                    <ColumnDefinition Width="Auto"
                                      MinWidth="80" />
                    <ColumnDefinition Width="Auto"
                                      MinWidth="80" />
                    <ColumnDefinition Width="Auto"
                                      MinWidth="80" />
                    <ColumnDefinition Width="Auto"
                                      MinWidth="80" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="会社名" />
                <TextBox Grid.Column="1"
                         Grid.ColumnSpan="4"
                         Height="30"
                         Margin="10,0,0,0"
                         VerticalAlignment="Center"
                         d:Text="会社名"
                         Text="{Binding Current.Name}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="〒 住所" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,0,10,0"
                         VerticalAlignment="Center"
                         d:Text="郵便番号"
                         Text="{Binding Current.PostalCode}"
                         TextWrapping="Wrap"  />
                <TextBox Grid.Row="1"
                         Grid.Column="4"
                         Grid.ColumnSpan="4"
                         Height="30"
                         Margin="10,0,-17,0"
                         VerticalAlignment="Center"
                         d:Text="住所1"
                         Text="{Binding Current.Address1}"
                         TextWrapping="Wrap"  />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Height="30"
                         Margin="10,0,10,0"
                         VerticalAlignment="Center"
                         d:Text="住所2"
                         Text="{Binding Current.Address2}"
                         TextWrapping="Wrap"  />
                <TextBox Grid.Row="2"
                         Grid.Column="4"
                         Grid.ColumnSpan="4"
                         Height="30"
                         Margin="10,0,-17,0"
                         VerticalAlignment="Center"
                         d:Text="住所3"
                         Text="{Binding Current.Address3}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="3"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="TEL   Mail" />
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Height="30"
                         Margin="10,0,0,0"
                         VerticalAlignment="Center"
                         d:Text="Tel"
                         Text="{Binding Current.Tel}"
                         TextWrapping="Wrap"  />
                <TextBox Grid.Row="3"
                         Grid.Column="4"
                         Grid.ColumnSpan="4"
                         Height="30"
                         Margin="14,0,-17,0"
                         VerticalAlignment="Center"
                         d:Text="Fax"
                         Text="{Binding Current.Mail}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="4"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="振込先1-3" />
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Height="30"
                         Margin="10,0,3,0"
                         VerticalAlignment="Center"
                         d:Text="Bank1"
                         Text="{Binding Current.BankAccount1}"
                         TextWrapping="Wrap"  />
                <TextBox Grid.Row="4"
                         Grid.Column="4"
                         Grid.ColumnSpan="4"
                         Height="30"
                         Margin="14,0,-17,0"
                         VerticalAlignment="Center"
                         d:Text="Bank2"
                         Text="{Binding Current.BankAccount2}"
                         TextWrapping="Wrap"  />
                <TextBox Grid.Row="5"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Height="30"
                         Margin="10,0,10,0"
                         VerticalAlignment="Center"
                         d:Text="Bank3"
                         Text="{Binding Current.BankAccount3}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="6"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="期首年月日" />
                <DatePicker Grid.Row="6"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="日付"
                            FontSize="15"
                            IsTodayHighlighted="False"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            
                            SelectedDate="{Binding Current.FiscalStartDate, Converter={StaticResource DateYmd8Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="7"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="締日" />
                <TextBox Grid.Row="7"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,0,10,0"
                         VerticalAlignment="Center"
                         d:Text="締日"
                         Text="{Binding Current.ShimeBi}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="8"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="修正有効日数" />
                <TextBox Grid.Row="8"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,0,95,0"
                         VerticalAlignment="Center"
                         d:Text="修正Day"
                         Text="{Binding Current.ModifyDaysEx}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="8"
                       Grid.Column="3"
                       Height="30"
                       Margin="10,0,5,0"
                       VerticalAlignment="Center"
                       Content="先付有効日数" />
                <TextBox Grid.Row="8"
                         Grid.Column="4"
                         Height="30"
                         Margin="0,0,10,0"
                         VerticalAlignment="Center"
                         d:Text="先付Day"
                         Text="{Binding Current.ModifyDaysPre}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="10"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="税率1" />
                <TextBox Grid.Row="10"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,0,0,0"
                         VerticalAlignment="Center"
                         d:Text="Tax"
                         Text="{Binding Current.Jsub[0].TaxRate}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="10"
                       Grid.Column="3"
                       Height="30"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Content="新税率切替日" />
                <DatePicker Grid.Row="10"
                            Grid.Column="4"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="日付"
                            FontSize="15"
                            IsTodayHighlighted="False"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            
                            SelectedDate="{Binding Current.Jsub[0].DateFrom, Converter={StaticResource DateYmd8Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="10"
                       Grid.Column="6"
                       Height="30"
                       VerticalAlignment="Center"
                       Content="新税率1" />
                <TextBox Grid.Row="10"
                         Grid.Column="7"
                         Height="30"
                         Margin="10,0,0,0"
                         VerticalAlignment="Center"
                         d:Text="新Tax"
                         Text="{Binding Current.Jsub[0].TaxNewRate}"  />
                <Label Grid.Row="11"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="税率2" />
                <TextBox Grid.Row="11"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,0,0,0"
                         VerticalAlignment="Center"
                         d:Text="Tax"
                         Text="{Binding Current.Jsub[1].TaxRate}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="11"
                       Grid.Column="3"
                       Height="30"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Content="新税率切替日" />
                <DatePicker Grid.Row="11"
                            Grid.Column="4"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="日付"
                            FontSize="15"
                            IsTodayHighlighted="False"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            
                            SelectedDate="{Binding Current.Jsub[1].DateFrom, Converter={StaticResource DateYmd8Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="11"
                       Grid.Column="6"
                       VerticalAlignment="Center"
                       Content="新税率2" />
                <TextBox Grid.Row="11"
                         Grid.Column="7"
                         Height="30"
                         Margin="10,0,0,0"
                         VerticalAlignment="Center"
                         d:Text="新Tax"
                         Text="{Binding Current.Jsub[1].TaxNewRate}"  />
                <Label Grid.Row="12"
                       Grid.Column="0"
                       Height="30"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"
                       Content="税率3" />
                <TextBox Grid.Row="12"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,0,0,0"
                         VerticalAlignment="Center"
                         d:Text="Tax"
                         Text="{Binding Current.Jsub[2].TaxRate}"
                         TextWrapping="Wrap"  />
                <Label Grid.Row="12"
                       Grid.Column="3"
                       Height="30"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Content="新税率切替日" />
                <DatePicker Grid.Row="12"
                            Grid.Column="4"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="日付"
                            FontSize="15"
                            IsTodayHighlighted="False"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            
                            SelectedDate="{Binding Current.Jsub[2].DateFrom, Converter={StaticResource DateYmd8Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label Grid.Row="12"
                       Grid.Column="6"
                       Height="30"
                       VerticalAlignment="Center"
                       Content="新税率3" />
                <TextBox Grid.Row="12"
                         Grid.Column="7"
                         Height="30"
                         Margin="10,0,0,0"
                         VerticalAlignment="Center"
                         d:Text="新Tax"
                         Text="{Binding Current.Jsub[2].TaxNewRate}"  />
            </Grid>
        </Grid>
    </Grid>
</helpers:BaseWindow>
