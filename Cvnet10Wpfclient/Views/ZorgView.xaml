<helpers:BaseWindow x:Class="Cvnet10Wpfclient.Views.ZorgView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Cvnet10Wpfclient.Views"
        xmlns:vm="clr-namespace:Cvnet10Wpfclient.ViewModels"
        xmlns:helpers="clr-namespace:Cvnet10Wpfclient.Helpers"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource AppCommonBackgroundBrush}"
        TextOptions.TextFormattingMode="Display"                    
        Title="ZorgView"  Height="760" Width="1024">
    <helpers:BaseWindow.DataContext>
        <vm:ZorgViewModel />
    </helpers:BaseWindow.DataContext>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" Orientation="Vertical" HorizontalAlignment="Stretch">
                <TextBlock FontSize="22"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="MaterialDesign サンプル一覧" />

                <TextBlock Margin="0,10,0,20"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="テーマカラー / コントロール / リソースのサンプル表示" />

                <TextBlock FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="テーマブラシ" />
                <UniformGrid Columns="4" Margin="0,10,0,20">
                    <Border Margin="6" Padding="10" Background="{DynamicResource PrimaryHueMidBrush}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="PrimaryHueMidBrush" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{DynamicResource PrimaryHueLightBrush}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="PrimaryHueLightBrush" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{DynamicResource PrimaryHueDarkBrush}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="PrimaryHueDarkBrush" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{DynamicResource SecondaryHueMidBrush}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="SecondaryHueMidBrush" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{DynamicResource MaterialDesignPaper}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="MaterialDesignPaper" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{DynamicResource MaterialDesignCardBackground}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="MaterialDesignCardBackground" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{DynamicResource MaterialDesignToolForeground}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="MaterialDesignToolForeground" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{DynamicResource MaterialDesignSelection}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="MaterialDesignSelection" />
                    </Border>
                </UniformGrid>

                <TextBlock FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="カスタムカラー" />
                <UniformGrid Columns="4" Margin="0,10,0,20">
                    <Border Margin="6" Padding="10" Background="{StaticResource color1}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color1" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color2}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color2" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color3}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color3" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color4}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color4" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color5}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color5" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color6}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color6" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color7}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color7" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color8}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color8" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color9}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color9" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color10}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color10" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color11}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color11" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color12}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color12" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource color13}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="color13" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource panelColor}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="panelColor" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource panelOverColor}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="panelOverColor" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource panelActiveColor}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="panelActiveColor" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource buttonColor1}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="buttonColor1" />
                    </Border>
                    <Border Margin="6" Padding="10" Background="{StaticResource AppCommonBackgroundBrush}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="AppCommonBackgroundBrush" />
                    </Border>
                </UniformGrid>

                <TextBlock FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="コントロール" />
                <WrapPanel Margin="0,10,0,20" HorizontalAlignment="Left">
                    <Button Margin="6" Padding="16,8" Content="Primary" Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button Margin="6" Padding="16,8" Content="Flat" Style="{StaticResource MaterialDesignFlatButton}" />
                    <Button Margin="6" Padding="16,8" Content="Outlined" Style="{StaticResource MaterialDesignOutlinedButton}" />
                    <ToggleButton Margin="6" Content="Toggle" Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                    <CheckBox Margin="6" Content="CheckBox" />
                    <RadioButton Margin="6" Content="Radio" />
                    <Slider Margin="6" Width="160" Minimum="0" Maximum="100" Value="60" />
                    <ProgressBar Margin="6" Width="160" Height="10" Value="60" />
                </WrapPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox Width="240"
                             Margin="0,0,12,0"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             materialDesign:HintAssist.Hint="TextBox" />
                    <ComboBox Width="200" SelectedIndex="0">
                        <ComboBoxItem Content="Item 1" />
                        <ComboBoxItem Content="Item 2" />
                        <ComboBoxItem Content="Item 3" />
                    </ComboBox>
                </StackPanel>

                <materialDesign:Card Margin="0,0,0,20" Padding="16">
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource MaterialDesignBody}" Text="Card" />
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="MaterialDesign の Card サンプル" />
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</helpers:BaseWindow>
