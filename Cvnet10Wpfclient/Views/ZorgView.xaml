<helpers:BaseWindow x:Class="Cvnet10Wpfclient.Views.ZorgView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:helpers="clr-namespace:Cvnet10Wpfclient.Helpers"
                    xmlns:local="clr-namespace:Cvnet10Wpfclient.Views"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:vm="clr-namespace:Cvnet10Wpfclient.ViewModels"
                    Title="ZorgView"
                    Width="1024"
                    Height="1090"
                    Background="{DynamicResource AppCommonBackgroundBrush}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    TextOptions.TextFormattingMode="Display"
                    mc:Ignorable="d">
    <helpers:BaseWindow.DataContext>
        <vm:ZorgViewModel />
    </helpers:BaseWindow.DataContext>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20"
                        HorizontalAlignment="Stretch"
                        Orientation="Vertical">
                <TextBlock Width="400"
                           HorizontalAlignment="Left"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="MaterialDesign サンプル一覧" />

                <TextBlock Width="400"
                           Margin="0,10,0,20"
                           HorizontalAlignment="Left"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="テーマカラー / コントロール / リソースのサンプル表示" />
                <TextBlock Width="400"
                           HorizontalAlignment="Left"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="テーマブラシ" />

                <UniformGrid Margin="0,10,0,20"
                             Columns="4">
                    <Border Margin="6"
                            Padding="10"
                            Background="{DynamicResource PrimaryHueMidBrush}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="PrimaryHueMidBrush" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{DynamicResource PrimaryHueLightBrush}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="PrimaryHueLightBrush" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{DynamicResource PrimaryHueDarkBrush}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="PrimaryHueDarkBrush" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{DynamicResource SecondaryHueMidBrush}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="SecondaryHueMidBrush" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{DynamicResource MaterialDesignPaper}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="MaterialDesignPaper" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{DynamicResource MaterialDesignCardBackground}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="MaterialDesignCardBackground" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{DynamicResource MaterialDesignToolForeground}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="MaterialDesignToolForeground" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{DynamicResource MaterialDesignSelection}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="MaterialDesignSelection" />
                    </Border>
                </UniformGrid>

                <TextBlock FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="カスタムカラー" />
                <UniformGrid Margin="0,10,0,20"
                             Columns="4">
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color1}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color1" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color2}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color2" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color3}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color3" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color4}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color4" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color5}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color5" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color6}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color6" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color7}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color7" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color8}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color8" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color9}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color9" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color10}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color10" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color11}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color11" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color12}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color12" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource color13}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="color13" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource panelColor}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="panelColor" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource panelOverColor}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="panelOverColor" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource panelActiveColor}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="panelActiveColor" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource buttonColor1}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="buttonColor1" />
                    </Border>
                    <Border Margin="6"
                            Padding="10"
                            Background="{StaticResource AppCommonBackgroundBrush}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1">
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="AppCommonBackgroundBrush" />
                    </Border>
                </UniformGrid>

                <TextBlock FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Text="コントロール" />
                <WrapPanel Margin="0,10,0,20"
                           HorizontalAlignment="Left">
                    <Button Margin="6"
                            Padding="16,8"
                            Content="Primary"
                            Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button Margin="6"
                            Padding="16,8"
                            Content="Flat"
                            Style="{StaticResource MaterialDesignFlatButton}" />
                    <Button Margin="6"
                            Padding="16,8"
                            Content="Outlined"
                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                    <ToggleButton Margin="6"
                                  Content="Toggle"
                                  Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                    <CheckBox Margin="6"
                              Content="CheckBox" />
                    <RadioButton Margin="6"
                                 Content="Radio" />
                    <Slider Width="160"
                            Margin="6"
                            Maximum="100"
                            Minimum="0"
                            Value="60" />
                    <ProgressBar Width="160"
                                 Height="10"
                                 Margin="6"
                                 Value="60" />
                </WrapPanel>

                <StackPanel Margin="0,0,0,20"
                            Orientation="Horizontal">
                    <TextBox Width="240"
                             Margin="0,0,12,0"
                             materialDesign:HintAssist.Hint="TextBox"
                             Foreground="{DynamicResource MaterialDesignBody}" />
                    <ComboBox Width="200"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Item 1" />
                        <ComboBoxItem Content="Item 2" />
                        <ComboBoxItem Content="Item 3" />
                    </ComboBox>
                </StackPanel>

                <materialDesign:Card Margin="0,0,0,20"
                                     Padding="16">
                    <StackPanel>
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="Card" />
                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}"
                                   Text="MaterialDesign の Card サンプル" />
                    </StackPanel>
                </materialDesign:Card>
                <ListBox x:Name="SampleList"
                         Width="760"
                         Height="240"
                         HorizontalContentAlignment="Stretch"
                         ItemsSource="{Binding ColorItems}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            Margin="2">
                                    <Border Height="40"
                                            Background="{Binding Color1}"
                                            CornerRadius="2" />
                                    <TextBlock FontSize="10"
                                               Text="{Binding Color1}"
                                               TextAlignment="Center" />
                                </StackPanel>

                                <StackPanel Grid.Column="1"
                                            Margin="2">
                                    <Border Height="40"
                                            Background="{Binding Color2}"
                                            CornerRadius="2" />
                                    <TextBlock FontSize="10"
                                               Text="{Binding Color2}"
                                               TextAlignment="Center" />
                                </StackPanel>

                                <StackPanel Grid.Column="2"
                                            Margin="2">
                                    <Border Height="40"
                                            Background="{Binding Color3}"
                                            CornerRadius="2" />
                                    <TextBlock FontSize="10"
                                               Text="{Binding Color3}"
                                               TextAlignment="Center" />
                                </StackPanel>
                                <StackPanel Grid.Column="3"
                                            Margin="2">
                                    <Border Height="40"
                                            Background="{Binding Color4}"
                                            CornerRadius="2" />
                                    <TextBlock FontSize="10"
                                               Text="{Binding Color4}"
                                               TextAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</helpers:BaseWindow>
